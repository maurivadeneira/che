{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/documentos/(articulos|herejias-la|libros)/(.+)\\.pdf",
      "headers": {
        "Content-Type": "application/pdf"
      },
      "dest": "/documentos/$1/$2"
    },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "rewrites": [
    {
      "source": "/documentos/(articulos|herejias-la|libros)/*",
      "destination": "/documentos/$1/*"
    }
  ]
}